{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es2017",
      "lib": ["es6"],
      "allowJs": true,
      "moduleResolution": "node",
      "outDir": "dist",
      "sourceMap": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "src"
    },
    "ts-node": {
      "esm": true
    },
    "exclude": [
      "node_modules",
      "dist"
    ]
  }